<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="277dp"
                android:layout_height="255dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/description"
                android:src="@drawable/leaves" />

            <ImageView
                android:id="@+id/iv_signup3"
                android:layout_width="158dp"
                android:layout_height="198dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="80dp"
                android:contentDescription="@string/description"
                android:src="@drawable/signup3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_signup3">

                <TextView
                    android:id="@+id/tv_yourpet"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/your_pet"
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_buddy"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_yourpet"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/buddy_name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_buddy"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/pet_name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/et_name"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gender"
                    android:layout_marginHorizontal="@dimen/dimen_24"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        style="@style/RadioButtonSignup"
                        android:button="@null"
                        android:checked="false"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        style="@style/RadioButtonSignup"
                        android:button="@null"
                        android:checked="false"
                        android:text="@string/female" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_little"
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/rg_gender"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/pet_description"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="73dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/rg_gender"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="21dp"
                    android:layout_toEndOf="@id/tv_little"
                    android:text="@string/pet_40words_limit"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_about"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:layout_below="@id/tv_little"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_input"
                    android:gravity="top"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="@dimen/dimen_0" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_next"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/et_about"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="25dp"
                    app:cardBackgroundColor="#455A64"
                    app:cardCornerRadius="27dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</layout>